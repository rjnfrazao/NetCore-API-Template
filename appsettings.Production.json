{
  // Connection String for Production.
  "ConnectionStrings": {
    "DefaultConnection": "PRODUCTION_CONFIGURATION_HIDDEN;Initial Catalog=sqldb-task;Persist Security Info=False;User ID={user};Password={your_password};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
  },

  // Custom Settings
  "CustomSettings": {
    "MaxTasks": 50
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
